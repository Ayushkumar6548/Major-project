<% layout("/layouts/boilerplate")%>

    <body>    
        <h3 class="mt-2">All Listings</h3>
        <form method="get" action="/listings/new" class="mt-3">
            <button type="submit">Create New Listing</button>
        </form>
        <br>
        <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
            <% for(let listing of allListings) { %>
                <a href="/listings/<%=listing._id %>" class="listing-link" >
                    <div class="card col listing-card">
                        <img src="<%= listing.image.url%>" class="card-img-top" alt="listings" style="height: 20rem">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listing.title %>
                                </b>
                                <br>
                                <%= listing.price.toLocaleString("en-IN") %>/Night
                            </p>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>




    </body>

    </html>