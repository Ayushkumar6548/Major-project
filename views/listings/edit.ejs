<% layout("/layouts/boilerplate")%>

    <body>
        
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>Edit your Listing</h3>
                <form method="POST" action="/listings/<%= Listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label"></label>
                        <input name="listing[title]" value="<%= Listing.title %>" type="text" class="form-control"  required/>
                        <div class="invalid-feedback">
                            Please Enter the title.
                          </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label"></label>
                        <textarea name="listing[description]" class="form-control"  required><%= Listing.description %></textarea>
                        <div class="invalid-feedback">
                         Write a short description.
                          </div>
                    </div>
                    <div class="mb-3">
                        Original listing image <br>
                        <img src="<%= originalurl %>" alt="">
                    </div>
                    <div class="mb-3">
                        <label for="link" class="form-label"></label>
                        <input name="listing[image]" class="form-control"  type="text"  />
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label"></label>
                            <input name="listing[price]" value="<%= Listing.price %>" type="number" min="0"
                                class="form-control"  required/>
                                <div class="invalid-feedback">
                                    fill the price.
                                  </div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label"></label>
                            <input name="listing[country]" value="<%= Listing.country %>" type="text"
                                class="form-control"  required/>
                                <div class="invalid-feedback">
                                    Please enter valid country name.
                                  </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label"></label>
                        <input name="listing[location]" value="<%= Listing.location %>" type="text" required />
                        <div class="invalid-feedback">
                            Enter valid location .
                          </div>
                    </div>
                    <button class="btn add-btn mt-3">Edit</button>
                </form>
            </div>
        </div>
        
    </body>
